<section class="modes">
  <div class="modes__title">
    <h1><%= t('modes') %></h1>
    <p><%= link_to t('new_mode'), new_mode_path %></p>
  </div>
  <div class="modes__list">
    <% if @modes.empty? %>
      <h3><%= t('no_modes_registered') %></h3>
    <% else %>
      <table class="suppliers__list">
        <thead>
          <tr>
            <th><%= t('name') %></th>
            <th><%= t('distance') %> (Km)</th>
            <th><%= t('status') %></th>
          </tr>
        </thead>
        <tbody>
          <% @modes.each do |mode| %>
            <tr>
              <td><%= link_to mode.name, mode_path(mode.id) %></td>
              <td><%= t('from').capitalize %> <%= mode.min_distance %> <%= t('to') %> <%= mode.max_distance %></td>
              <td>
                <span class="<%= mode.active ? 'ativo' : 'inativo' %>">
                  <%= mode.active ? t('active') : t('inactive') %>
                </span>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</section>