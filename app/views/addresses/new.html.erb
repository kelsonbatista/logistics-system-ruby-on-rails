<section class="<%= 'orders__logout' if !user_signed_in? %>">
  <div class="orders">
    <h1><%= t('order') %> <%= @order.code %></h1>
    <%= button_to(t("back"), order_path(@order), method: :get, class: "btn btn-primary back__btn") %>
  </div>
  <div class="orders__list">
    <%= render partial: "form", locals: { address: @address } %>
  </div>
</section>